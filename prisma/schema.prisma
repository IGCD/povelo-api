generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  email       String    @id @unique(map: "unique__email") @db.VarChar(255)
  password    String    @db.VarChar(255)
  phoneNumber String?   @unique(map: "unique__phoneNumber") @db.VarChar(255)
  createdAt   DateTime  @default(now()) @db.DateTime(0)
  updatedAt   DateTime? @db.DateTime(0)

  @@unique([email, password], map: "unique__email_password")
}
