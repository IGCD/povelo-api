generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  email             String    @unique(map: "unique__email") @db.VarChar(255)
  password          String    @db.VarChar(255)
  profilePictureUrl String?   @db.VarChar(255)
  phoneNumber       String?   @unique(map: "unique__phoneNumber") @db.VarChar(255)
  refreshToken      String?   @db.VarChar(255)
  createdAt         DateTime  @default(now()) @db.DateTime(0)
  updatedAt         DateTime? @db.DateTime(0)
  Post              Post[]

  @@unique([email, password], map: "unique__email_password")
}

model Post {
  id        Int       @id @default(autoincrement())
  userId    Int?
  title     String    @db.VarChar(255)
  content   String    @db.VarChar(255)
  imageUrl  String?   @db.VarChar(255)
  thumbnail String?   @db.VarChar(255)
  createdAt DateTime  @default(now()) @db.DateTime(0)
  updatedAt DateTime? @db.DateTime(0)
  User      User?     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "userId")

  @@index([userId], map: "userId")
}
